#list
sinceridad = [0.75,0.85,0.3,0.6]
fidel = [0.6,0.1,0.2,0.8]
respeto = [0.9,0.5,0.4,0.5]

#normalization (normal)
for i in range(len(sinceridad)):
    sinceridad[i] *= max(sinceridad)
sinceridad = [ round(elem, 2) for elem in sinceridad ]
print("Sinceridad :",sinceridad)

#(y mas)
for i in range(len(respeto)):
    respeto[i]  = respeto[i]**2
respeto = [ round(elem, 2) for elem in respeto ]
print("Respeto :",respeto)
print("Fidelidad :",fidel,"\n")

#list
classement = []
#Conjunto de todo (intersecion (y))
for i in range(len(fidel)):
    if sinceridad[i] < fidel[i]:
        if sinceridad[i] > respeto[i]:
            print("El",i,"de la lista tiene el numero : ",respeto[i])
            classement.append(respeto[i])
        else:
            print("El",i,"de la lista tiene el numero : ",sinceridad[i])
            classement.append(sinceridad[i])
    elif respeto[i] < fidel[i]:
        if respeto[i] < sinceridad[i]:
            print("El",i,"de la lista tiene el numero : ",respeto[i])
            classement.append(respeto[i])
        else:
            print("El",i,"de la lista tiene el numero : ",sinceridad[i])
            classement.append(sinceridad[i])
    else:
        print("El",i,"de la lista tiene el numero : ",fidel[i])
        classement.append(fidel[i])

print("Mejor personas ",classement.index(max(classement)),":", max(classement))
